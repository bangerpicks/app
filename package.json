{
  "name": "banger-picks",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/dev-with-ip.js",
    "prebuild": "node -e \"const fs=require('fs');try{fs.rmSync('.next',{recursive:true,force:true})}catch(e){}\"",
    "build": "next build",
    "build:safe": "npm run prebuild && npm run build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "setup": "npm install && npm run type-check",
    "clean": "node -e \"const fs=require('fs');['.next','node_modules','package-lock.json'].forEach(p=>{try{fs.rmSync(p,{recursive:true,force:true})}catch(e){}})\"",
    "clean:install": "npm run clean && npm install",
    "fresh": "npm run clean:install && npm run build"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.0.0",
    "firebase": "^10.14.1",
    "lucide-react": "^0.344.0",
    "next": "^14.2.35",
    "next-intl": "^4.7.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0"
  }
}
