rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // TEMPORARY TEST RULES - Allow all authenticated users to write
    // Replace with proper admin rules after testing
    match /shop-items/{itemId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
